<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/fondoa"
    tools:context="apps.proyecto.pairumani.appbuild.MamposteriaActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        android:alpha="0.20"> </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="MAMPOSTERIA"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" ></TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="Ingresar altura de la pared, la longitud total, espesor y tipo de ladrillo utilizado: "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
             ></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="570dp"
            android:textColor="@color/white"
            android:text="Tipo de Ladrillo:"
            android:textAlignment="center"
            android:textSize="17dp"
            android:background="@drawable/com_facebook_tooltip_black_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:gravity="center"

            android:textColor="@color/white"
            android:text="Proporción del mortero"

            android:textSize="17dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignParentEnd="true"
                android:background="@drawable/informac" />

        </RelativeLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            android:text="Altura (mts)"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="150dp"
            android:id="@+id/Maltura"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textSize="18dp"/>




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="175dp"
    android:textColor="@color/white"
    android:text="Tipo de Ladrillo:"
    android:textAlignment="center"
    android:textSize="17dp"
    android:background="@drawable/com_facebook_tooltip_black_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:gravity="center"
            android:textColor="@color/white"
            android:text="Tipo de Ladrillo:"
            android:textAlignment="center"
            android:textSize="17dp"
            />
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true"
        android:background="@drawable/informac" />

</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="375dp"
            android:textColor="@color/white"
            android:text="Tipo de Ladrillo:"
            android:textAlignment="center"
            android:textSize="17dp"
            android:background="@drawable/com_facebook_tooltip_black_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

           android:gravity="center"
            android:textColor="@color/white"
            android:text="Espesor Mortero:"
            android:textAlignment="center"
            android:textSize="17dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignParentEnd="true"
                android:background="@drawable/informac" />
        </RelativeLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            android:text="Longitud (mts)"
            android:textSize="18dp"
            android:textAlignment="center" />

        <EditText
            android:textColor="@color/white"
            android:layout_width="150dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:id="@+id/Mlargo"
            android:inputType="numberDecimal"

            android:textAlignment="center" />

        <RelativeLayout
            android:layout_marginTop="220dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content">


            <RadioGroup
                android:id="@+id/Ladrillo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:orientation="vertical"
                android:textColor="@color/white">

                <RadioButton
                    android:id="@+id/rbtizon"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"

                    android:checked="true"
                    android:gravity="center"
                    android:text="Muro en Tizón: 7*12*22 (cm)"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:theme="@style/RadioButtonStyle">


                </RadioButton>

                <RadioButton
                    android:id="@+id/rbsoga"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
    android:layout_margin="10dp"
                    android:inputType="textNoSuggestions"
                    android:gravity="center"
                    android:text="Muro en Soga: 7*22*12 (cm)"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:theme="@style/RadioButtonStyle">


                </RadioButton>

                <RadioButton
                    android:id="@+id/rbpapelillo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
android:layout_marginTop="10dp"
                    android:inputType="textNoSuggestions"
                    android:gravity="center"
                    android:text="Muro en Papelillo: 12*22*7 (cm)"
                    android:textColor="@color/white"
                    android:textSize="18dp"

                    android:theme="@style/RadioButtonStyle" />


            </RadioGroup>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="420dp"
            android:gravity="center"  android:inputType="textNoSuggestions"
            android:layout_height="wrap_content">


            <RadioGroup

                android:id="@+id/EspMortero"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:layout_width="match_parent"
                android:layout_height="150dp">


                <RadioButton
                    android:id="@+id/rbespesor3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:text="1.5*1.5 (cm)"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:theme="@style/RadioButtonStyle" />

                <RadioButton
                    android:id="@+id/rbespesor2"
                    android:layout_width="200dp"

                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"

                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.2*1.2 (cm)"

                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:theme="@style/RadioButtonStyle">


                </RadioButton>

                <RadioButton
                    android:id="@+id/rbespesor1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1*1 (cm)"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:theme="@style/RadioButtonStyle">


                </RadioButton>
            </RadioGroup>


        </RelativeLayout>






        <Button
            android:id="@+id/btncalcular"
            android:layout_width="match_parent"
            android:layout_marginTop="800dp"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"

            android:background="@android:color/holo_orange_light"
            android:onClick="Operar"
            android:text="Calcular" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="1|3, 450kg (Cemento), 1.08 m³ (Agr. Fino)"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="650dp"
            android:textColor="@color/white"
            android:text="Tipo de Ladrillo:"
            android:textAlignment="center"
            android:textSize="17dp"
            android:background="@drawable/com_facebook_tooltip_black_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:textColor="@color/white"
            android:text="Proporción del repello"
            android:textAlignment="center"
            android:textSize="17dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignParentEnd="true"
                android:background="@drawable/informac" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="700dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="1|4, 360kg (Cemento), 1.15 m³ (Agr. Fino)"
                android:gravity="center"/>

        </RelativeLayout>
    </RelativeLayout>


    </ScrollView>

</RelativeLayout>
